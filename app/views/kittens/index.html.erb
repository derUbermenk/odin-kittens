<h1>Kittens</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kittens.each do |kitten| %>
      <tr>
        <td><strong><%= kitten.name %></strong><td>
        <td><small><%= link_to 'Show', kitten %></small></td>
        <td><small><%= link_to 'Edit', edit_kitten_path(kitten) %></small></td>
        <td><small><%= link_to 'Destroy', kitten, method: :delete, data: { confirm: 'Are you sure?' } %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kitten', new_kitten_path %>
